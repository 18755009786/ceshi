<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">
    <WebView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:id="@+id/web_view">
    </WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="0dp"
            android:layout_height="218dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/bt1"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="50dp"
                    android:layout_height="40dp"

                    android:layout_centerInParent="true" />

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_above="@+id/btn_1"
                    android:layout_alignLeft="@id/btn_1"
                    android:text="U" />

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="53dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_1"
                    android:layout_alignLeft="@id/btn_1"
                    android:layout_marginLeft="-3dp"
                    android:text="D" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_3"
                    android:layout_centerHorizontal="true"
                    android:background="#fff"
                    android:text="视频控制"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@id/btn_1"
                    android:layout_toLeftOf="@+id/btn_1"
                    android:text="L"
                    android:onClick="A"/>

                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@id/btn_1"
                    android:layout_toRightOf="@+id/btn_1"
                    android:text="R" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bt2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50dp">

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:text="S" />

                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_above="@+id/btn_6"
                    android:layout_alignLeft="@id/btn_6"
                    android:text="U" />

                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/btn_6"
                    android:layout_alignLeft="@id/btn_6"
                    android:text="D" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_8"
                    android:layout_centerHorizontal="true"
                    android:background="#fff"
                    android:text="小车控制"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@id/btn_6"
                    android:layout_toLeftOf="@+id/btn_6"
                    android:text="R" />

                <Button
                    android:id="@+id/btn_10"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@id/btn_6"
                    android:layout_toRightOf="@+id/btn_6"
                    android:text="L" />
            </RelativeLayout>

        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>-->


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拍照"
        android:id="@+id/back2"
        android:textSize="20dp"
        android:layout_below="@+id/login_btn_register"
        android:layout_marginTop="2dp"

        android:textColor="#ffffff"
        android:background="#EB420C"
        />
</LinearLayout>